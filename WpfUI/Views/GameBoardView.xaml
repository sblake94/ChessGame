		<Button x:Name="TILE_G3" CommandParameter="G3" Style="{StaticResource DarkTile}"/>
		<Button x:Name="TILE_G4" CommandParameter="G4" Style="{StaticResource LightTile}"/>
		<Button x:Name="TILE_G5" CommandParameter="G5" Style="{StaticResource DarkTile}"/>
		<Button x:Name="TILE_G6" CommandParameter="G6" Style="{StaticResource LightTile}"/>
		<Button x:Name="TILE_G7" CommandParameter="G7" Style="{StaticResource DarkTile}"/>

		<Button x:Name="TILE_H0" CommandParameter="H0" Style="{StaticResource DarkTile}"/>
		<Button x:Name="TILE_H1" CommandParameter="H1" Style="{StaticResource LightTile}"/>
		<Button x:Name="TILE_H2" CommandParameter="H2" Style="{StaticResource DarkTile}"/>
		<Button x:Name="TILE_H3" CommandParameter="H3" Style="{StaticResource LightTile}"/>
		<Button x:Name="TILE_H4" CommandParameter="H4" Style="{StaticResource DarkTile}"/>
		<Button x:Name="TILE_H5" CommandParameter="H5" Style="{StaticResource LightTile}"/>
		<Button x:Name="TILE_H6" CommandParameter="H6" Style="{StaticResource DarkTile}"/>
		<Button x:Name="TILE_H7" CommandParameter="H7" Style="{StaticResource LightTile}"/>
	</UniformGrid>
</UserControl>
