		<Button x:Name="TILE_F6" CommandParameter="F6" Style="{StaticResource DarkTile}"/>
		<Button x:Name="TILE_F7" CommandParameter="F7" Style="{StaticResource LightTile}"/>

		<Button x:Name="TILE_G0" CommandParameter="G0" Style="{StaticResource LightTile}"/>
