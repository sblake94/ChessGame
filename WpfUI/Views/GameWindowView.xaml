<Window x:Class="WpfUI.Views.GameWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfUI.Views"
        mc:Ignorable="d"
		Background="#202020"
		Title="GameWindowView" Height="auto" Width="auto">
    <StackPanel Margin="20" 
				Orientation="Horizontal"
				HorizontalAlignment="Left">

		<local:GameBoardView VerticalAlignment="Center" 
							 HorizontalAlignment="Center"
							 Width="auto"
							 Height="600"/>

		<Grid HorizontalAlignment="Left"
			  Width="450"
			  Height="600">
			<Grid.RowDefinitions>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>

			<local:GameDataView Grid.Row="0"
								Margin="0"/>

			<local:MoveHistoryView VerticalAlignment="Stretch" 
								   HorizontalAlignment="Left"
								   Grid.Row="1"
								   Width="auto"
								   Height="auto"/>
		</Grid>
		
		
	</StackPanel>
</Window>
